#This program translates a letter grade into a number grade
##Letter grades are "A, B, C, D, and F, and possibly could be followed by a + or -

#ask for a letter grade
grade = 0
def main():
    print("Your number grade is", numberGrade(grade))

def numberGrade(grade):
    letter = input("Please enter letter grade:")
    if letter == "A" or letter == "A+":
        number = 4.0
    elif letter =="A-":
        number = 3.7
    elif letter == "B":
        number = 3.0
    elif letter == "B+":
        number = 3.3
    elif letter == "B-":
        number = 2.7
    elif letter == "C":
        number = 2.0
    elif letter == "C+":
        number = 2.3
    elif letter == "C-":
        number = 1.7
    elif letter == "D":
        number = 1.0
    elif letter == "D+":
        number = 1.3
    elif letter == "D-":
        number = 0.7
    elif letter == "F":
        number = 0.0
    return number
    
        
main()

